<!DOCTYPE HTML>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0" />
    <link rel="stylesheet" href="~/Areas/Admin/Publics/Styles/Styles.css" />
    <script src="~/Areas/Admin/Publics/JS/jquery.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/Publics/JS/dashboard.js" type="text/javascript"></script>
    <title>Kezdőlap szerkesztése</title>
</head>
<body>
    <header class="MainHeader">
        <div class="Logo"><a href="#">BIG W</a><span>arrior Software</span></div>
    </header>
    <a class="mobile" href="#">MENU</a>
    <div class="MainContent">
        <aside class="MainSidebar">
            <nav>
                <ul class="MainMenu">
                    <li><a href="#">Műszerfal</a></li>
                    <li><a class="selected" href="Home">Kezdőlap szerkesztése</a></li>
                    <li><a href="CurriculumVitae">Önéletrajz szerkesztése</a></li>
                    <li><a href="Blog">Blog szerkesztése</a></li>
                    <li><a href="References">Referenciák szerkesztése</a></li>
                </ul>
            </nav>
            <footer>
                <p>Minden jog fenntartva &copy; @DateTime.Now.Year</p>
            </footer>
        </aside>
        <div class="Content">
            <h1>Kezdőlap szerkesztése</h1>
            <div class="box">
                @using (Html.BeginForm("Submit", "Home", FormMethod.Post))
                {
                    <textarea name="editor" class="ckeditor" id="homedata" cols="20">@ViewData["HomeData"]</textarea>
                }
                @ViewData["Status"]
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Areas/Admin/Publics/ckeditor/ckeditor.js"></script>
</body>
</html>
